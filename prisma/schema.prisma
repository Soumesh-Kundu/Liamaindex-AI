generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
enum Role {
  USER
  SYSTEM
  ASSISTANT
}

type Content{
  score Float
  text String
}
model Messages{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  threadID String @db.ObjectId
  content String
  role Role 
  data Content[] 
  createdAt DateTime @default(now())
  comments String[]
}
model Threads{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  heading String
  createdAt DateTime @default(now())
}